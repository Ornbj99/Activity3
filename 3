		break;
	case 11:
		if (day>30)
			{ 
				cout<<"Invalid date!"<<endl;
			}
			else
			{
				cout<<"November"<<" "<<day<<","<<year<<endl;
			}
		break;
	case 12:
		if (day>31)
			{ 
				cout<<"Invalid date!"<<endl;
			}
			else
			{
				cout<<""<<" "<<day<<","<<year<<endl;
			}
		break;
	default:
