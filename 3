			}
			else
			{
				cout<<"March"<<" "<<day<<","<<year<<endl;
			}
		break;
	case 4:
		if (day>30)
			{ 
				cout<<"Invalid date!"<<endl;
			}
			else
			{
				cout<<"April"<<" "<<day<<","<<year<<endl;
			}
		break;
	case 5:
		if (day>31)
			{ 
				cout<<"Invalid date!"<<endl;
			}
			else
			{
				cout<<"May"<<" "<<day<<","<<year<<endl;
			}
		break;
	case 6:
		if (day>30)
			{ 
				cout<<"Invalid date!"<<endl;
			}
			else
			{
				cout<<"June"<<" "<<day<<","<<year<<endl;
			}
		break;
	case 7:
		if (day>31)
			{ 
				cout<<"Invalid date!"<<endl;
			}
			else
			{
				cout<<"July"<<" "<<day<<","<<year<<endl;
			}
		break;
	case 8:
		if (day>31)
			{ 
				cout<<"Invalid date!"<<endl;
			}
			else
			{
				cout<<"August"<<" "<<day<<","<<year<<endl;
			}
		break;
	case 9:
		if (day>30)
			{ 
				cout<<"Invalid date!"<<endl;
			}
			else
			{
				cout<<"September"<<" "<<day<<","<<year<<endl;
			}
		break;
	case 10:
		if (day>31)
